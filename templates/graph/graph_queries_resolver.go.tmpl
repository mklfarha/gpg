func resolveLimit(limit *int) int32 {
    if limit == nil {
        return int32(10)
    }
    return int32(*limit)
}

func resolveOffset(offset *int) int32 {
    if offset == nil {
        return int32(0)
    }
    return int32(*offset)
}

